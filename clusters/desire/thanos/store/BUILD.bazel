load("@k8s_desire//:defaults.bzl", "k8s_desire")

k8s_desire(
    name = "deployment",
    kind = "Deployment",
    namespace = "thanos",
    template = "deployment.yaml",
)

k8s_desire(
    name = "service",
    kind = "Service",
    namespace = "thanos",
    template = "service.yaml",
)

load("@io_bazel_rules_k8s//k8s:objects.bzl", "k8s_objects")

k8s_objects(
    name = "objects",
    objects = [
        ":deployment",
        ":service",
    ],
    visibility = ["//visibility:public"],
)
